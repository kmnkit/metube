extends ../templates/layout
include ../mixins/video

block content
  div.flex.flex-col
    if user.avatarUrl
      div.w-full.flex
        if isHeroku
          img(src=user.avatarUrl).rounded-full.w-24.h-24
        else
          if user.socialOnly
            img(src=user.avatarUrl).rounded-full.w-24.h-24
          else
            img(src="/" + user.avatarUrl).rounded-full.w-24.h-24
        h3.ml-4=user.name
    else
      span(role="img") üòç
    div.video-grid.p-4
      each video in user.videos
        +video(video)