include avatar
mixin video(video)
  div.main__video-container
    a(href=`/videos/${video.id}`)
      if isHeroku
        img(src=video.thumbUrl).w-60.h-40.rounded-md.bg-cover.bg-center
      else
        img(src="/"+video.thumbUrl).w-60.h-40.rounded-md.bg-cover.bg-center
    div.video__info
      a(href=`/users/${video.owner._id}`).w-full
        +avatar(video.owner)
      a(href=`/videos/${video.id}`).w-72
        div.video__info-text.flex.flex-col.h-auto
          span.overflow-ellipsis.break-words=video.title
          p=video.owner.username
          p=calcDate(video.createdAt)
