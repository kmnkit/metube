extends templates/layout
block content
  div.form__screen
    if errorMessage
      span=errorMessage
    form(method="POST").upload__form
      label(for="title")
      input(name="title",placeholder="New Video Title", value=video.title, required)
      label(for="description")
      input(placeholder="Description", required, type="text", name="description",value=video.description, minlength=20)
      label(for="hashtags")
      input(placeholder="Hashtags, separated by comma.", required, type="text",value=video.hashtags.join(), name="hashtags")
      input(value="Save", type="submit")
